<idea-plugin>
    <id>com.phodal.charj</id>
    <name>Charj</name>
    <vendor>phodal</vendor>

    <!-- Product and plugin compatibility requirements -->
    <!-- https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="com.github.phodal.charj.services.MyApplicationService"/>
        <projectService serviceImplementation="com.github.phodal.charj.services.MyProjectService"/>


        <fileType name="Charj File" implementationClass="com.phodal.charj.CharjFileType" fieldName="INSTANCE"
                  language="Charj" extensions="cj"/>

        <lang.parserDefinition language="Charj" implementationClass="com.phodal.charj.CharjParserDefinition"/>
        <lang.syntaxHighlighterFactory language="Charj"
                                       implementationClass="com.phodal.charj.highlight.CharjSyntaxHighlighterFactory"/>

        <completion.contributor language="Charj"
                                implementationClass="com.phodal.charj.completion.CharjCompletionContributor"/>
    </extensions>

    <projectListeners>
        <listener class="com.github.phodal.charj.listeners.MyProjectManagerListener"
                  topic="com.intellij.openapi.project.ProjectManagerListener"/>
    </projectListeners>
</idea-plugin>
